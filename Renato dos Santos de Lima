    <script>
        function calcularPerfil() {
            var form = document.getElementById('investorForm');
            var formData = new FormData(form);
            var nome = formData.get('nome');
            var cpf = formData.get('cpf');
            var dataNascimento = formData.get('dataNascimento');
            var assinatura = formData.get('assinatura');
            var pontos = {
                idade: parseInt(formData.get('idade')),
                conhecimento: parseInt(formData.get('conhecimento')),
                objetivo: parseInt(formData.get('objetivo')),
                tolerancia: parseInt(formData.get('tolerancia')),
                tempo: parseInt(formData.get('tempo')),
                renda: parseInt(formData.get('renda')),
                reacao: parseInt(formData.get('reacao'))
            };

            var pontuacaoTotal = pontos.idade + pontos.conhecimento + pontos.objetivo + pontos.tolerancia + pontos.tempo + pontos.renda + pontos.reacao;
            var perfil = '';

            if (pontuacaoTotal <= 6) {
                perfil = "Conservador";
            } else if (pontuacaoTotal <= 14) {
                perfil = "Moderado";
            } else {
                perfil = "Arrojado";
            }

            document.getElementById('resultado').innerHTML = `
                <p>Cliente: ${nome}</p>
                <p>CPF: ${cpf}</p>
                <p>Data de Nascimento: ${dataNascimento}</p>
                <p>Assinatura: ${assinatura}</p>
                <p>Perfil do Investidor: ${perfil}</p>
                <p>Pontuação Total: ${pontuacaoTotal}</p>
                <div class="signature-line">
                    <p>Local: _________________________</p>
                    <p>Data: __________________________</p>
                    <p>Assinatura: _____________________</p>
                </div>
                <button onclick="window.print()">Imprimir</button>
            `;
        }
    </script>

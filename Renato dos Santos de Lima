                <input type="date" name="dataNascimento" required>
            </div>
            <div class="question">
                <label>Assinatura:</label><br>
                <input type="text" name="assinatura" required>
            </div>
            <!-- Perguntas do formulário -->
            <div class="question">
                <label>Qual sua idade?</label><br>
                <input type="radio" name="idade" value="3" required> Menos de 30 anos<br>
